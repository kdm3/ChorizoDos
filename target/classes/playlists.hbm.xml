<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
  
 <hibernate-mapping>  
	 <class name="com.chorizoinfo.hibernate.Playlists" table="playlists">  
		    <id name="id" column="playlist_id" type="int">
            <generator class="native"/>
        </id>
        <property name="playlistname" column="playlistname" type="string"></property>  
		 <property name="playlisthref" column="playlisthref" type="string"></property>  
         
        <property name="userid" type="int" column="user_id" not-null="true"></property>  
	 </class>      
 </hibernate-mapping>  
 
 